<Window x:Class="Dusza_Fogadas.pages.Regisztracio"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Regisztráció" Height="400" Width="300">
    <Grid>
        <StackPanel Margin="20">
            <Label>Név:</Label>
            <TextBox x:Name="tbNev" />

            <Label>Email:</Label>
            <TextBox x:Name="tbEmail" />

            <Label>Jelszó:</Label>
            <PasswordBox x:Name="pbJelszo" />

            <Label>Jelszó újra:</Label>
            <PasswordBox x:Name="pbJelszoUjra" />

            <Label>Szerepkör:</Label>
            <ComboBox x:Name="cbSzerepkor">
                <ComboBoxItem Content="szervező"/>
                <ComboBoxItem Content="fogadó" />
            </ComboBox>

            <Button Content="Regisztrál" Click="btnRegisztral_Click" Margin="0,10,0,0" />
        </StackPanel>
    </Grid>
</Window>