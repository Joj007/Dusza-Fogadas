<Window x:Class="Dusza_Fogadas.AdminPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Panel" Height="600" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Felhasználók">
                <StackPanel>
                    <ListBox Name="UsersListBox" SelectionChanged="UsersListBox_SelectionChanged"/>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <Button Content="Aktiválás" Click="ActivateButton_Click" Margin="5" />
                        <Button Content="Deaktiválás" Click="DeactivateButton_Click" Margin="5" />
                    </StackPanel>
                </StackPanel>
            </TabItem>
            <TabItem Header="Játékok">
                <StackPanel>
                    <ListBox Name="GamesListBox" SelectionChanged="GamesListBox_SelectionChanged"/>
                    <Button Content="Törlés" Click="DeleteGameButton_Click" />
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>